<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
        <li class="tab col s6"><a  href="#register">Регистрация </a></li>
       
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3 ">
      <h2>Войти в магазин</h2>
        <form method="post" action="/auth/login">
            <div class="input-field ">
                  <input placeholder="Ведитье Email" id="email" type="email" name="email" class="validate" required>
                  <label for="email">Email</label>
                  <span class="helper-text" data-error="Ведитье Email" ></span>
                </div>

            <div class="input-field "> 
                  <input placeholder="Ведитье парол" id="password" type="password" name="password" class="validate" required>
                  <label for="password">парол</label>
                  <span class="helper-text" data-error="Ведитье парол" ></span>
                </div>

            

                <button class="btn btn-primary" >Войти</button>
        </form>

    </div>
    <div id="register" class="col s6 offset-s3 ">
        <h2>Создать акаунт</h2>
        <form method="post" action="/auth/register">
            <div class="input-field ">
                  <input placeholder="Ведитье Email" id="remail" type="email" name="email" class="validate" required>
                  <label for="remail">Email</label>
                  <span class="helper-text" data-error="Ведитье Email" ></span>
                </div>
            <div class="input-field ">
                  <input placeholder="Ведитье имя" id="name" type="text" name="name" class="validate" required>
                  <label for="name">Имя</label>
                  <span class="helper-text" data-error="Ведитье имя" ></span>
                </div>

            <div class="input-field "> 
                  <input placeholder="Ведитье парол" id="rpassword" type="password" name="password" class="validate" required>
                  <label for="rpassword">парол</label>
                  <span class="helper-text" data-error="Ведитье парол" ></span>
                </div>
          
            <div class="input-field "> 
                  <input placeholder="Ведитье парол ещe раз" id="confirm" type="password" name="confirm" class="validate" required>
                  <label for="confirm">парол ещe раз</label>
                  <span class="helper-text" data-error="Ведитье парол" ></span>
                </div> 

            

                <button class="btn btn-primary" >Зарегистрироваться</button>
        </form>

    </div>
   
  </div>
</div>